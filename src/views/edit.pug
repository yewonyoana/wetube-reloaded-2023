extends base.pug

block content
    h4 Edit Video
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(name="description", type="text", placeholder="Description", minlength=20, value=video.description, required)
        input(name="hashtags", type="text", placeholder="Hashtags, separate with comma.", value=video.hashtags.join(), required)
        input(value="Save", type="submit")