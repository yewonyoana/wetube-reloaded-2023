extends base.pug

block content 
    div#videoContainer(data-id=video.id)
        video(src=video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00                   
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        div.video__head
            span.video__title=video.title
            if String(video.owner._id) === String(loggedInUser._id)
                a.video__edit(href=`${video.id}/edit`) ‚úÇÔ∏è
                    span Edit Video
                a.video__delete(href=`${video.id}/delete`) üóëÔ∏è
                    span Delete Video
        div.video__metadata
            small.video__owner Uploaded by 
                a(href=`/user/${video.owner._id}`)=video.owner.name
            small.video__createdAt=new Date(video.createdAt).toLocaleDateString("eng", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
    if loggedIn
        div.video__comments
            form.video__comment-form#commentForm
                textarea(cols="50", rows="3", placeholder="Write Commment")
                button <i class="fas fa-plus"></i>
            span.video__comment-delete hover over comment to delete
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment._id)
                    span.comment__icon üíõ
                    span #{comment.text}
                    if String(comment.owner) === String(loggedInUser._id)
                        span.delete__icon ‚ùå
        
block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn 
        script(src="/static/js/commentSection.js")