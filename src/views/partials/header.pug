header
    a(href="/").header__logo
        .fab.fa-youtube
        span 🐝🐝🐝
    nav 
        ul 
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li.upload
                    a(href="/videos/upload") Upload Video
                li.edit 
                    a(href="/user/edit") Edit Profile
                li.logout 
                    a(href="/user/logout") Logout
                li.loggedIn__header
                    a(href=`/user/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            span 😎
                        else
                            if loggedInUser.avatarUrl
                                if loggedInUser.avatarUrl.includes("github")
                                    img.header__avatar(src=loggedInUser.avatarUrl,crossorigin)
                                else
                                    img.header__avatar(src="/" + loggedInUser.avatarUrl)

            else
                li
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join
        